# Create and cd into directory
mkcd() {
  mkdir -p "$1" && cd "$1"
}

# Extract archives
extract() {
  if [ -f $1 ]; then
    case $1 in
      *.tar.bz2)   tar xjf $1     ;;
      *.tar.gz)    tar xzf $1     ;;
      *.tar.xz)    tar xJf $1     ;;
      *.bz2)       bunzip2 $1     ;;
      *.gz)        gunzip $1      ;;
      *.zip)       unzip $1       ;;
      *)           echo "'$1' cannot be extracted" ;;
    esac
  fi
}

